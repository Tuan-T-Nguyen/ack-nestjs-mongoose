{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false,
        "target": "ESNext",
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "paths": {
            "@app/*": ["src/*"],
            "@common/*": ["src/common/*"],
            "@config/*": ["src/config/*"],
            "@modules/*": ["src/modules/*"],
            "@router/*": ["src/router/*"],
            "@worker/*": ["src/worker/*"],
            "@migration/*": ["src/migration/*"],
            "@test/*": ["test/*"]
        }
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "logs",
        "data",
        "src/metadata.ts"
    ]
}
